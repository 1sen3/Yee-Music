<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Yee_Music.WelcomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Yee_Music"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 内容区域 - 使用FlipView实现分页效果 -->
        <FlipView x:Name="WelcomeFlipView" 
                  Grid.Row="1" 
                  Margin="20,10,20,10"
                  Background="Transparent">
            <FlipView.Items>
                <!-- 第一页：欢迎介绍 -->
                <Grid Background="Transparent">
                    <StackPanel Orientation="Vertical"
                                Spacing="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal"    
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center" 
                                    MaxWidth="600"
                                    Spacing="24">
                                <Image Source="/Assets/Square44x44Logo.altform-lightunplated_targetsize-256.png"
                                   Width="150"
                                   Height="150"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                            <StackPanel Orientation="Vertical" Spacing="10"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Yee Music" 
                                       FontSize="24" 
                                       FontWeight="Black"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,10"/>
                                <TextBlock Text="优雅、灵动、高效。" 
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="点击下一步开始设置您的音乐库" 
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- 第二页：设置音乐库 -->
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600" Spacing="20">
                        <FontIcon Glyph="&#xE8B7;" 
                                  FontSize="64" 
                                  HorizontalAlignment="Center"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="设置您的音乐库" 
                                   FontSize="24" 
                                   FontWeight="Black"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,10"/>
                        <TextBlock Text="选择包含您音乐文件的文件夹，Yee Music 将自动扫描并添加您的音乐。" 
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                            <TextBox x:Name="MusicLibraryPathTextBox" 
                                     Width="400" 
                                     PlaceholderText="选择音乐库文件夹路径"
                                     IsReadOnly="True"/>
                            <Button x:Name="BrowseButton" 
                                    Content="浏览" 
                                    Click="BrowseButton_Click"/>
                        </StackPanel>

                        <TextBlock x:Name="LibraryPathErrorText" 
                                   Text="请选择一个有效的文件夹路径" 
                                   Foreground="Red"
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- 第三页：完成设置 -->
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600" Spacing="20">
                        <FontIcon Glyph="&#xE930;" 
                                  FontSize="64" 
                                  HorizontalAlignment="Center"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="准备就绪！" 
                                   FontSize="24" 
                                   FontWeight="Black"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,10"/>
                        <TextBlock Text="您的音乐库已设置完成，点击开始使用Yee Music。" 
                                   TextWrapping="Wrap"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   FontSize="20"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="您随时可以在设置中添加或移除音乐库。" 
                                   TextWrapping="Wrap"
                                   FontWeight="Normal"
                                   TextAlignment="Center"
                                   FontSize="20"/>
                    </StackPanel>
                </Grid>
            </FlipView.Items>
        </FlipView>

        <!-- 底部按钮区域 -->
        <Grid Grid.Row="2" Margin="20,10,20,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SkipButton" 
                    Content="跳过" 
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Click="SkipButton_Click"/>

            <Button x:Name="PreviousButton" 
                    Content="上一步" 
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    Click="PreviousButton_Click"
                    Visibility="Collapsed"/>

            <Button x:Name="NextButton" 
                    Content="下一步" 
                    Grid.Column="2"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="NextButton_Click"/>
        </Grid>
    </Grid>
</Window>